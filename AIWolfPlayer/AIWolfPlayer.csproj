<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <VersionPrefix>1.1.0</VersionPrefix>
    <VersionSuffix>alpha2</VersionSuffix>
    <Authors>Takashi OTSUKI</Authors>
    <Company>AIWolfSharp</Company>
    <Description>The AIWolf sample player.</Description>
    <Copyright>Copyright ©  2017 Takashi OTSUKI</Copyright>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RootNamespace>AIWolf.Player</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.4\AIWolfPlayer.xml</DocumentationFile>
    <DefineConstants>TRACE;DEBUG;NETSTANDARD1_4;JHELP</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.4\AIWolfPlayer.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AIWolfLib" Version="1.1.0-alpha2" />
  </ItemGroup>

</Project>